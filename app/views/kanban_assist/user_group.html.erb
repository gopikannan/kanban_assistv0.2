<div id="dialog-message" title="Select Group">
  <p>Welcome <%= current_user.email %> !</p>
  <%= form_tag("/welcomeuser", :method => "get") do %>
      <p>
      <%= label_tag("Select your group for this session") %>
      <p>
      <%= collection_select(:play, :user_group_id, current_user.groups.all, :id, :name) %>
       </p>


       <hr/>
        <div class="ui-dialog-buttonset">
          <%= submit_tag("Ok", :id=>"userGroupOk", :class => "ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" ,:style=>'float:right') %>
        </div>
      </p>

  <% end %>
</div>
<div id="tabs">
  <ul>
    <li><a href="#tabs-1">Play</a></li>
    <li><a href="#tabs-2">Play History</a></li>
    <li><a href="#tabs-3">Settings</a></li>
    <li><a href="#tabs-4">Items</a></li>
    <li><a href="#tabs-5">Demand</a></li>
  </ul>

</div>
